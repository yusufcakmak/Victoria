<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatEditText android:layout_width="match_parent"
                                                 android:id="@+id/et"
                                                 android:layout_marginTop="36dp"
                                                 android:layout_marginRight="16dp"
                                                 android:layout_marginLeft="16dp"
                                                 android:layout_height="wrap_content"/>


    <com.yusufcakmak.keyboard.NumberKeyboardView android:layout_width="match_parent"
                                                 android:layout_alignParentBottom="true"
                                                 android:id="@+id/numView"
                                                 android:layout_height="wrap_content">

    </com.yusufcakmak.keyboard.NumberKeyboardView>


</RelativeLayout>